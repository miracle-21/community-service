<!doctype html>
<html lang="kr">
  <%- include('head.html') %>
  <body>
    <%- include('nav.html') %>
    <div class="container mt-4">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h5 class="title card-title"><%=result.title%></h3>
          <p class="card-subtitle mb-2 text-muted"><%=result.created_at%></p>
          <pre class="card-text"><%=result.content%></pre>
          <a href="javascript:history.back()" class="card-link">뒤로</a>
          <a href="/edit/<%= result._id %>" class="card-link">수정</a>
          <a href="/delete/<%= result._id %>" class="delete card-link">삭제</a>
          <a class="card-text" style="color: rgb(84, 82, 82); float:right;">조회수: <%=result.view%></a>
        </div>
      </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>