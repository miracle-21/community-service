<!doctype html>
<html lang="kr">
  <%- include('head.html') %>
  <body>
    <%- include('nav.html') %>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <div class="container mt-4 mb-5">
      <h2 class="banner ml-2 my-3 text-center">게시판</h2>

      <ul class="list-group mb-2">
        <% for (var i = 0; i < result.length; i ++){ %>
          <li class="list-group-item">
            <a class="title" href="detail/<%= result[i]._id %>"><%= result[i].title %></a>
            <a class="d-grid gap-2 d-md-flex justify-content-md-end" style="font-size: small; color: rgb(84, 82, 82);">
              <%= result[i].username %> | <%= result[i].created_at %>
            </a>
          </li>
        <% } %>
      </ul>        
    </div>
    <div class="container mt-4 mb-5" >
      <%- include('search.html') %>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>